{
  "description": "AbemaTV用のFireFox拡張機能です。複数台で同期視聴することができます。（通話しながら一緒に見れる）",
  "manifest_version": 2,
  "name": "AbemaSync",
  "version": "1.0",
  "icons": {
    "48": "icons/beasts-48.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://abema.tv/*"
      ],
      "js": [
        "/script/onload.js"
      ]
    }
  ],
  "options_ui": {
    "page": "/script/options.html",
    "browser_style": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com",
      "strict_min_version": "42.0"
    }
  }
}